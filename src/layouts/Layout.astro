---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{title}</title>
		<meta name="description" content="De Filosofen" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>

	<header>
		<h1>De Filosofen</h1>
	</header>

	<main>
		<slot />
	</main>

	<footer>
		<p>&copy; Copyright {new Date().getFullYear()}, alle rechten voorbehouden.</p>
	</footer>

</body>
</html>

<style is:global>
	:root {
		--vars: 'foo';
	}
</style>